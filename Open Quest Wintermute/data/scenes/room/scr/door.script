#include "scripts\base.inc"

global WinMenu;

#include "interface\verbbar\verbbar_functions.inc"

var verb_default = "Look at";

////////////////////////////////////////////////////////////////////////////////
on "LookAt"
{
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "TalkTo"
{
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "PickUp"
{
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "Use"
{
  verb_setBar(Command.Verb + " " + Command.Object1_caption);
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "Give"
{
  verb_setBar(Command.Verb + " " + Command.Object1_caption);
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "Smell"
{
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "Open"
{
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "Move"
{
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "LeftClick"
{
  GoToObject();
  Game.ChangeScene("scenes\room2\room2.scene");
  verb_cleanBar();
}

////////////////////////////////////////////////////////////////////////////////
on "RightClick"
{
  verb_apply(verb_default);
}

////////////////////////////////////////////////////////////////////////////////
on "MouseEntry"
{
  verb_hover("Look at");
}

////////////////////////////////////////////////////////////////////////////////
on "MouseLeave"
{
  verb_unhover("Look at");
}

function GoToObject()
{
actor.GoTo(255, 110);
actor.TurnTo(DI_RIGHT);
}

